Library include: {
#include <iostream>
}

Application subClass: Console as: {

	class function write: message {
		std::cout << TEXT(message);
		return null;
	}

	class function writeLn: message {
		std::cout << TEXT(message) << std::endl;
		return null;
	}

	class function error: message {
		std::cerr << TEXT(message);
		return null;
	}

	class function errorLn: message {
		std::cerr << TEXT(message) << std::endl;
		return null;
	}

	class function input {
		std::string result;
		std::cin >> result;
		return new meat::Text(result);
	}
}
