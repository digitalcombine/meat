Library import: UnitTest

Test subClass: Test.List body: {

	method initialize {
		super initialize
		self setTitle: "List basic functionallity"
	}

	method execute {
		list = [List new]
		obj = "Hello"
	
		list append: 1
		list append: 2
		list append: obj
		list append: 3
		list append: 4
		
		[[list size] == 5] isFalse: {
			self fail: "List returned incorrect size"
		}
		
		[[list get: 2] == 2] isFalse: {
			self fail: "Unable to retreive value from list"
		}
				
		list removeAt: 2
		[[list size]  == 4] isFalse: {
			self fail: "Failed to remove item from list"
		}
		
		list remove: obj
		[[list size]  == 3] isFalse: {
			self fail: "Failed to remove item from list"
		}
		
		self pass
	}	
}
