Library import: UnitTest

Test.Suite subClass: Test.List body: {

  method setup {
	  alist = [List new]

	  self title: "4.?.? Method copy" test: {
		  alist clear

			alist append: 1
			alist append: "Hello"
			alist append: 2

		  acopy = [alist copy]

			[acopy is: alist] isTrue: {
			  self fail: "Copy method just returned itself."
			}

			[acopy isType: List] isFalse: {
				self fail: "Copy method didn't return a list."
			}

			[[acopy size] == 3] isFalse: {
			  self fail: "Copy method didn't return a shallow copy of the proper size."
			}

		  self pass
		}
	}
}
