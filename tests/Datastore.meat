#==============================================================================
# Library

Object subClass: Libraryᶲ body: {

	class function import: filename {
#ifdef DEBUG
		std::cout << "DEBUG: Importing library " << filename->to_string()
  	          << std::endl;
#endif /* DEBUG */

		if (Gitgo::Data::compiler_import != 0)
			Gitgo::Data::compiler_import(filename->to_string());
		else {
			Gitgo::Data::Library::import(filename->to_string());
		}

		return null;
	}

	class function include: cpp_includes {
		if (Gitgo::Data::compiler_import != 0)
		  Gitgo::Data::Library::include(cpp_includes->to_string());
		else
		  throw Exception("Method Library include is only with the compiler");
		  
		return null;
	}
}

