Object subClass: Archiveᶲ body: {

	class function open: filename {
		return new Gitgo::Data::Archive(filename->to_string());
	}

	class function create: filename {
		return new Gitgo::Data::Archive(filename->to_string(), true);
	}
	
	function import: filename {
		Gitgo::Data::Archive &archive_obj = (Gitgo::Data::Archive &)(*self);
		
		Gitgo::Data::Library::import(filename->to_string());
		archive_obj.add_import(filename->to_string());

		return null;
	}
	
	function getObject {
		Gitgo::Data::Archive &store_obj = (Gitgo::Data::Archive &)(*self);
		return store_obj.get_object();
	}
	
	function setObject: value {
		Gitgo::Data::Archive &archive_obj = (Gitgo::Data::Archive &)(*self);
