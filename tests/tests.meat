archive = [Archive create: "tests.mapp"]

archive import: "UnitTest"
archive import: "Test.Number"
archive import: "Test.Text"
archive import: "Test.Index"
archive import: "Test.Data"
archive import: "Test.Compiler"

# Create the Test Suite.
suite = [TestSuite new]

# Add all our tests to the test suite
suite add: [Test.NumberBadness new]
suite add: [Test.Text new]
suite add: [Test.Index new]
suite add: [Test.Data new]
suite add: [Test.Compiler new]

# Add the Test Suite to the archive.
archive setObject: suite
